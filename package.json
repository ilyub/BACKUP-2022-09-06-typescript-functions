{
  "name": "@skylib/functions",
  "version": "1.0.0",
  "private": false,
  "description": "Typescript functions",
  "keywords": [
    "function",
    "typescript"
  ],
  "homepage": "https://github.com/ilyub/typescript-functions",
  "bugs": {
    "url": "https://github.com/ilyub/typescript-functions/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ilyub/typescript-functions.git"
  },
  "license": "ISC",
  "author": "Ilia Liubinskii <admin.phpdev@gmail.com> (https://github.com/ilyub)",
  "publisher": "ilyub",
  "scripts": {
    "build": "tsc --project tsconfig-build.json",
    "build-doc": "typedoc src",
    "build-es": "ttsc --project tsconfig-build-es.json",
    "commitlint": "commitlint --edit",
    "commitlint-all": "commitlint --config commitlint-all.config.js --from=",
    "lint": "eslint --fix --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,src,tests}/**/*.{js,ts,vue}",
    "lint-fast": "eslint --config .eslintrc.fast.js --fix --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,src,tests}/**/*.{js,ts,vue}",
    "lint-no-fix": "eslint --max-warnings 0 --no-error-on-unmatched-pattern *.{js,ts} {__mocks__,src,tests}/**/*.{js,ts,vue}",
    "prepare": "cpy node_modules/@skylib/config/src/git-hooks/* .git/hooks",
    "test": "jest",
    "test-fast": "jest --config=jest.config.fast.js",
    "tsc": "tsc --noEmit",
    "update-package-check": "ncu --dep dev,prod --reject @types/node",
    "update-package-check-peer": "ncu --dep peer --minimal --reject @types/node",
    "update-package-check-skylib": "ncu --dep peer --filter @skylib/*",
    "update-package-force": "ncu --dep dev,prod --reject @types/node --upgrade",
    "update-package-force-peer": "ncu --dep peer --minimal --reject @types/node --upgrade",
    "update-package-force-skylib": "ncu --dep peer --filter @skylib/* --upgrade"
  },
  "devDependencies": {
    "@skylib/config": "^1.2.0",
    "@skylib/eslint-plugin": "^0.1.17",
    "@skylib/typescript-types": "^0.1.2"
  },
  "peerDependencies": {
    "@sinonjs/fake-timers": "^9.1.0",
    "@types/lodash": "^4.14.178",
    "@types/lodash-es": "^4.17.6",
    "@types/sinonjs__fake-timers": "^8.1.1",
    "jest-extended": "^2.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "ts-toolbelt": "^9.6.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
